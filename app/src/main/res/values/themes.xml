<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FireAuth" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/azure</item>
        <item name="colorPrimaryVariant">@color/tuna</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowBackground">@color/soft_peach</item>
        <item name="android:textColor">@color/tuna</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/azure</item>
        <item name="colorSecondaryVariant">@color/sunglow</item>
        <item name="colorOnSecondary">@color/soft_peach</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
</resources>